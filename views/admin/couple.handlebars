<div class="grid-y medium-grid-frame">
  <div class="cell shrink header medium-cell-block-container">
    {{!-- <h1>Grid Frame Header</h1> --}}
    <div class="grid-x grid-padding-x">
      <div class="cell medium-12">
        <h2>Who's the lovely couple?</h2>
      </div>
      {{!-- <div class="cell medium-8 medium-cell-block">
        <p style="width:80vw;">You have # of posts</p>
      </div> --}}
    </div>
  </div>
  <div class="cell medium-auto medium-cell-block-container">
    <div class="grid-x grid-padding-x">
      <div class="cell medium-4 medium-cell-block-y">
        <form method='post' action='/admin/couple'class="cell">
          <div class="card-user-profile">
              <img class="card-user-profile-img" src="https://images.pexels.com/photos/5439/earth-space.jpg?h=350&auto=compress&cs=tinysrgb" alt="picture of space" />

              <div class="card-user-profile-content card-section">
                <div class="card-user-profile-avatar">
                  <img src="../../public/assets/img/four/groom.png" alt="picture of yeti" />
                  <label for="exampleFileUpload" class="button">Upload File</label>
                  <input type="file" name="photo" id="exampleFileUpload" class="show-for-sr" name="partner_image" accept=".jpg, .jpeg, .png"   multiple>

                </div>
                <p class="card-user-profile-name">
                    <div class="form-floating-label">
                      <input type="text" id="name" name="name" required>
                      <label for="name">
                          Name
                      </label>
                    </div>
                </p>
                <p class="card-user-profile-name">
                    <div class="form-floating-label">
                      <input type="text" id="image" name="image" required>
                      <label for="image">
                          Image
                      </label>
                    </div>
                </p>
                <p class="card-user-profile-status">
                    <div class="form-floating-label">
                      <input type="text" id="description" name="description" required>
                      <label for="description">
                          Description
                      </label>
                          {{!-- <textarea data-tooltip aria-haspopup="true" class="has-tip" data-disable-hover="false" tabindex="1" title="description ..." data-alignment="bottom"> --}}
                          {{!-- </textarea> --}}
                    </div>
                </p>
              </div>
              {{!-- Submit / Edit --}}
              {{!-- <div class="card-user-profile-actions">
                  <select class="card-user-profile-button button hollow secondary">
                    <option class="button" value="husker">Groom</option>
                    <option class="button" value="starbuck">Bride</option>
                    <option class="button" value="hotdog">Partner</option>
                  </select>
              </div>   --}}       
              <div class="card-user-profile-actions">
                {{!-- <a href="#" class="card-user-profile-button button hollow">Edit</a> --}}
                <button class="card-user-profile-button button hollow" type="submit" value='Send'>Submit Couple</button>
              </div>
          </div>
        </form>

      </div>
      <div class="cell medium-8 medium-cell-block-y">
        <div class="grid-x grid-padding-x small-up-1 medium-up-2 large-up-2">
          {{#each couple}}
            <form method='POST' action='/admin/couple/{{_id}}'class="cell contact-us-form">
              <div class=" card-user-profile">
                <img class="card-user-profile-img" src="{{image}}" alt="picture of space" />
                <div class="card-user-profile-content card-section">
                  <p class="card-user-profile-name">
                    <input name="name" type="text" value="{{name}}" placeholder="{{name}}">
                  </p>
                  <p class="card-user-profile-status hide">
                    <input name="image" type="text" value="{{image}}" placeholder="{{image}}">
                  </p>

                  <p class="card-user-profile-info">
                    <textarea name="description" type="text" rows="4" value="{{description}}" placeholder="{{description}}"></textarea>
                  </p>
                </div>

                <div class="card-user-profile-actions">
                  {{!-- <a href="/admin/blog/{{_id}}" class="update-post card-user-profile-button button hollow">Edit</a> --}}
                  <a href="#" data-id="{{_id}}" class="delete-post card-user-profile-button button hollow">Delete</a>
                </div>
              </div>
            </form>
          {{else}}
            <h2>No Couples yet, you must be single or suck at planning a wedding...</h2>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <div class="cell shrink footer">
    {{!-- <h3>Here's my footer</h3> --}}
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
  $('.delete-post').on('click', function(e){
    $target = $(e.target);
    const id = $target.attr('data-id');
    $.ajax({
      type:'DELETE',
      url: '/admin/couple/'+id,
      success: function(response){
        alert('Deleting Article');
        window.location.href='/admin/couple';
      },
      error: function(err){
        console.log(err);
      }
    });
  });

});
</script>


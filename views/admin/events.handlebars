<div class="grid-x grid-padding-x small-up-1 medium-up-2 large-up-2">




<div class="cell">
  <form method='post' action='/admin/events'>
    <div class="card" style="width: 300px;">
      <div class="card-divider grid-x grid-padding-x ">
        <div class="cell small-12 form-floating-label">
          <input type="text" id="title" name="title" required>
          <label for="title">Event Title</label>
        </div>
      </div>
      {{!-- <img src="assets/img/generic/rectangle-1.jpg"> --}}
      <div class="card-section grid-x grid-padding-x ">
        <div class="cell small-6 form-floating-label">
          <input type="text" id="time" name="time">
          <label for="time">Time</label>
        </div>
        <div class="cell small-6 form-floating-label">
          <input type="text" id="date" name="date">
          <label for="date">Date</label>
        </div>
        
        <div class="cell small-12" style="height: 0.5em;"></div>

        <div class="cell small-12 form-floating-label">
          <input type="text" id="image" name="image">
          <label for="image">Image</label>
        </div>
        
        <div class="cell small-12" style="height: 0.5em;"></div>

        <div class="cell small-12 form-floating-label">
          <input type="text" id="location" name="location">
          <label for="location">Location</label>
        </div>

        <div class="cell small-12" style="height: 0.5em;"></div>

        <div class="cell small-12 form-floating-label">
          <textarea name="address" id="address" rows="5" placeholder="Address"></textarea>
        </div>

        <hr class="cell small-12" style="height: 0.5em;">
        <button class="button expanded" type="submit" value='Send'>Submit</button>
      </div>
    </div>
  </form>
</div>


  {{#each events}}

  {{/each}}



</div>

